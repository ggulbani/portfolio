<h1>Portfolio Items </h1>

<%= link_to "Create new item", new_p_folio_path %>

<% @portfolio_items.each do |p_item| %>
  <p> <%= link_to p_item.title, p_folio_path(p_item) %> </p>
  <p> <%= p_item.subtitle %> </p>
  <p> <%= p_item.body %> </p>
  <%= image_tag p_item.thumb_image if !p_item.thumb_image.nil? %> 
  <%= link_to "Edit", edit_p_folio_path(p_item) %>
  <%= link_to 'Delete Portfolio Item', p_folio_path(p_item), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>  